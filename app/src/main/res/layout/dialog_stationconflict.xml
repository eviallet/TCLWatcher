<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <TextView
            android:id="@+id/dialog_stationconflict_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/dialog_stationconflict_title"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="20sp"

            android:padding="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>
    <ScrollView
            android:id="@+id/dialog_stationconflict_checkbox_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:overScrollMode="ifContentScrolls"

            android:layout_below="@id/dialog_stationconflict_title">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
            <RadioGroup
                    android:id="@+id/dialog_stationconflict_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="@android:color/black"

                    android:padding="10dp"/>
            <LinearLayout
                    android:id="@+id/dialog_stationconflict_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="end">
                <Button
                        android:id="@+id/dialog_stationconflict_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/cancel"
                        android:textColor="@android:color/holo_red_dark"
                        android:background="@null"/>
                <Button
                        android:id="@+id/dialog_stationconflict_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/ok"
                        android:textColor="@android:color/darker_gray"
                        android:background="@null"
                        android:enabled="false"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>