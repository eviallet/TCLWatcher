<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="4dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="1dp">
        <LinearLayout
                android:id="@+id/row_bookmark_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
            <TextView
                    android:id="@+id/row_bookmark_from"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:textAlignment="center"
                    android:textColor="@android:color/black"

                    android:layout_weight="1"/>
            <ImageButton
                    android:id="@+id/row_bookmark_swap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/ic_swap_black"
                    android:background="@null"
                    android:rotation="90"

                    android:layout_gravity="center_vertical"/>
            <TextView
                    android:id="@+id/row_bookmark_to"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:textAlignment="center"
                    android:textColor="@android:color/black"

                    android:layout_weight="1"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:cardElevation="4dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="1dp"
            android:layout_marginTop="-15dp"

            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:animateLayoutChanges="true">
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/row_bookmark_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:visibility="gone"/>
            <LinearLayout
                    android:id="@+id/row_bookmark_expand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="13dp">
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray" />
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <ImageView
                            android:id="@+id/row_bookmark_expand_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:src="@drawable/ic_chevron_left"
                            android:rotation="270"

                            android:layout_centerHorizontal="true"/>
                    <ImageButton
                            android:id="@+id/row_bookmark_remove"
                            android:layout_width="15dp"
                            android:layout_height="15dp"

                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_delete"
                            android:tint="@android:color/darker_gray"
                            android:visibility="gone"
                            android:scaleType="fitXY"

                            android:layout_marginStart="15dp"
                            android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>